{
  "extends": "./tsconfig.json",
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts", "jest.config.ts"],
  "compilerOptions": {
    "declaration": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": false,
    "target": "ESNext",
    "types": ["node"]
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true,
    "fileExtensions": {
      "inputGlob": "{js,mjs}",
      "outputCheck": ["js", "json", "mjs"]
    }
  }
}
